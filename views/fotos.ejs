<!-- views/fotos.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  <link href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <%- include("partials/header") -%>
  </header>
  
  <div class="row">
    <%- include("partials/menu") -%>
    <div class="col">
      <div class="container text-center">
        <a href="/photos/add" class="btn btn-secondary">Add New Photo</a>
      </div>
      
      <div class="container-fluid p-4">
        <h1 class="pb-4"><%= title %></h1>
        <table id="tablaFotos" class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Título</th>
              <th>Descripción</th>
              <th>Ruta</th>
              <th>Fecha de creación</th>
              <th>Opciones</th>
            </tr>
          </thead>
          <tbody>
            <% arrFotos.forEach((foto) => { %>
              <tr>
                <td><%= foto.id %></td>
                <td><%= foto.titulo %></td>
                <td><%= foto.descripcion %></td>
                <td><%= foto.ruta %></td>
                <td><%= foto.createdAt.toLocaleDateString('en-US') %></td>
                <td></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <footer>
    <%- include("partials/footer") -%>
  </footer>
  
  <!-- Incluir jQuery y DataTables -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>
  
  <script>
    $(document).ready(function() {
      $('#tablaFotos').DataTable();
    });
  </script>
</body>
</html>